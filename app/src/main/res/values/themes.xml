<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPhoneBook" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
    <!-- Base application theme. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/btn_bg_change</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/btn_gradient_strtcolor</item>
        <item name="colorSecondaryVariant">@color/btn_gradient_endcolor</item>
        <item name="colorOnSecondary">@color/btn_gr_end</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionMenuTextColor">@color/primaryDarkColor</item>
        <item name="android:actionMenuTextColor">@color/primaryDarkColor</item>

        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">
            @style/stTextViewLabel
        </item>


    </style>
    <style name="Theme.MyPhoneBook.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ContactApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ContactApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="stDialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">17dp</item>
        <item name="android:paddingEnd">17dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/rounded_rectangle_button</item>
    </style>
    <style name="stTextViewLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
    </style>


    <style name="stCustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">serif</item>
    </style>




</resources>

